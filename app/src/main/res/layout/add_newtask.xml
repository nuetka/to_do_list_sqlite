<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/imagesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/centerPoint"
        android:layout_weight="1"
        android:gravity="center"
        android:text="add task"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal"/>

    <View
        android:id="@+id/imagesUnderline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/imagesTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@+id/centerPoint"
        android:layout_weight="1"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/videosTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/centerPoint"
        android:layout_weight="1"
        android:gravity="center"
        android:text="add event"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/videosUnderline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/videosTextView"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/centerPoint"
        android:layout_weight="1"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/centerPoint"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videosUnderline"
        android:layout_marginTop="10dp"
        android:hint="Enter Description"
        android:minHeight="48dp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Priotity:"
        android:textColor="#000"
        android:textSize="15sp"
        android:visibility="visible"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/flag1" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/flag2" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/flag3" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/flag4" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/flag5" />
    </RadioGroup>


    <RelativeLayout
        android:id="@+id/loy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/repeat1"
                android:text="Routine"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/repeat2"
                android:text="Period"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/radioGroup1"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/from"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="     from     (pick a date)"
                android:textSize="15sp"
                android:minHeight="48dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/to"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="      to      (pick a date)"
                android:textSize="15sp"
                android:minHeight="48dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loy1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dash1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/from1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="pick a time"
            android:layout_marginStart="10dp"
            android:minHeight="48dp"
            android:paddingEnd="7dp" />

        <CheckBox
            android:id="@+id/notificationCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:button="@drawable/notification_icon" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End:  "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/from2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="pick a time"
            android:layout_marginStart="10dp"
            android:minHeight="48dp"
            android:paddingEnd="7dp" />

        <CheckBox
            android:id="@+id/notificationCheckbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:button="@drawable/notification_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dash3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/h"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="hours"
            android:minHeight="48dp"
            android:paddingEnd="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/m"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="min"
            android:minHeight="48dp"
            android:paddingEnd="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/s"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="sec"
            android:minHeight="48dp"
            android:paddingEnd="7dp" />


    </LinearLayout>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/button_save"
        android:backgroundTint="@color/colorPrimary"
        android:text="Cancel"
        android:textColor="@color/colorWhite"
        android:textSize="17dp" />



</RelativeLayout>