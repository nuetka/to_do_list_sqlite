<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/imagesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/centerPoint"
        android:layout_weight="1"
        android:gravity="center"
        android:text="сортировка"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/imagesUnderline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/imagesTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/centerPoint"
        android:layout_weight="1"
        android:background="@android:color/black" />

    <View
        android:id="@+id/centerPoint"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/centerPoint"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/u1_1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="сначала невыполненные"/>

        <CheckBox
            android:id="@+id/u1_2"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Сначала выполненные"/>


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/lay"
        android:layout_marginRight="0dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/centerPoint"
        android:layout_weight="1"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lay"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/u2_1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="сначала высокий приоритет"/>

        <CheckBox
            android:id="@+id/u2_2"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Сначала низкий приоритет"/>


    </LinearLayout>

